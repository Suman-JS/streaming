generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  password  String
  salt      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Videos {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
